---
import Sidebar from '@components/neovim/Sidebar.astro';
import StatusBar from '@components/neovim/StatusBar.astro';
import '@/globals.css';
import KeyBindings from "@components/neovim/KeyBindings.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
</head>
<body class="bg-nvim-bg text-nvim-fg font-mono flex flex-col h-screen select-none prose-invert">
	<div class="flex flex-1 overflow-hidden">
		<Sidebar />
		<main class="flex-1 overflow-y-auto p-2">
			<span id="cursor" class={`animate-pulse absolute z-50 text-lg top-[0.5vh] left-[1vw]`}>|</span>
			<slot />
		</main>
	</div>
	<KeyBindings />
	<StatusBar />
	</body>
</html>

<script src="../scripts/navigation.ts"></script>
<script src="../scripts/search.ts"></script>